<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>@ViewBag.Title</title>
	<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/bootstrap-responsive.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/black_calculator.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/black_calculator_ie.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
	<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")"type="text/javascript"> </script>
	<script src="@Url.Content("~/Scripts/funcao.js")"type="text/javascript"> </script>
	<script src="@Url.Content("~/Scripts/jquery.blackcalculator.beta.min.js")" type="text/javascript"></script>
	<link href="@Url.Content("~/Content/black_calculator.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/black_calculator_ie.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/PIE.htc")" />
	@Html.Telerik( ).StyleSheetRegistrar( ).DefaultGroup(group => group.Add("telerik.common.css").Add("telerik.Sunset.css").Add("telerik.rtl.css"))
</head>
<body>
	<div id="logindisplay">
		@Html.Partial("_LogOnPartial")
	</div>
	@Html.Telerik( ).Menu( ).Name("Menu").Items(raiz =>
	{
		raiz.Add( ).Text("Página Incial").Action("Index", "Home", new { area = "OperadorCaixa" });
		raiz.Add( ).Text("Movimentação").Items(submenu =>
		{

			submenu.Add( ).Text("Sangria").Action("SangriaOperacaoCaixa", "OperacaoCaixa", new { area = "OperadorCaixa" });
			submenu.Add( ).Text("Lançar Caixa").Action("LancamentoOperacaoCaixa", "OperacaoCaixa", new { area = "OperadorCaixa" });
			submenu.Add( ).Text("Lançar Fechamento").Action("LancarFechamentoCaixa", "FecharCaixa", new { area = "OperadorCaixa" });

			

		});

		raiz.Add( ).Text("Consultas").Items(submenu =>
		{
           
            submenu.Add( ).Text("Visualizar Lançamentos Hoje").Action("LancamentosHoje", "OperacaoCaixa", new { area = "OperadorCaixa" });    
			submenu.Add( ).Text("Visualizar Lançamentos").Action("LancamentosData", "OperacaoCaixa", new { area = "OperadorCaixa" });
			submenu.Add( ).Text("Ver Meu Caixa").Action("FechamentoCaixaData", "FecharCaixa", new { area = "OperadorCaixa" });

		});

		raiz.Add( ).Text("Configuração").Items(submenu =>
		{
			submenu.Add( ).Text("Trocar Senha").Action("TrocarSenha", "Configuracao", new { area = "OperadorCaixa" });

		});

		raiz.Add( ).Text("Sair").Action("Sair", "Home", new { area = "OperadorCaixa" });


	})
	@RenderBody( )
	@Html.Telerik( ).ScriptRegistrar( ).jQuery(false)
</body>
</html>
