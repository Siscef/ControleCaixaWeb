@model ControleCaixaWeb.Models.ValidarData

@{
    ViewBag.Title = "VisualizarPagamentos";
    Layout = "~/Areas/Administracao/Views/Shared/_Layout.cshtml";
}

<h3>Por favor forneça um intervalo de datas</h3>
<br />
<h4>@ViewBag.DataErrada</h4>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Visualizar por datas</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.DataInicial)
        </div>
        <div class="editor-field">
            @Html.Telerik().DatePickerFor(model => model.DataInicial)
            @Html.ValidationMessageFor(model => model.DataInicial)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DataFinal)
        </div>
        <div class="editor-field">
            @Html.Telerik().DatePickerFor(model => model.DataFinal)
            @Html.ValidationMessageFor(model => model.DataFinal)
        </div>


        <div class="editor-label">
            Estabelecimento:
        </div>
        <div class="editor-field">
            @Html.DropDownList("Loja", (IEnumerable<SelectListItem>)ViewBag.Loja, "Selecione Estabelecimento")

        </div>


        <div class="editor-label">
            Favorecido:
        </div>
        <div class="editor-field">
            @Html.DropDownList("Favorecido", (IEnumerable<SelectListItem>)ViewBag.Favorecido, "Selecione Favorecido")

        </div>





        <br />
        <p>
            <input class="btn btn-success" type="submit" value="Visualizar" />
            <input class="btn btn-warning" type="reset" value="Limpar" />
        </p>
    </fieldset>
}

<div>
</div>