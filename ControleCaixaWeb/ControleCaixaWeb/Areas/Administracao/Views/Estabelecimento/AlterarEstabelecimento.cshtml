            @Html.LabelFor(model => model.UsuarioResponsavel,"Usuário Responsável:")
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.UsuarioResponsavel.Codigo, (IEnumerable<SelectListItem>)ViewBag.UsuarioResponsavel, "Selecione Usuario")@Html.ActionLink("Adicionar Usuário", "CadastrarUsuario", "Funcionario")
            @Html.ValidationMessageFor(model => model.UsuarioResponsavel)
        </div>

        <p>
           <input class="btn btn-warning" type="submit" value="Salvar Alterações" />
            
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Página Inicial", "Index", "Home")
</div>
