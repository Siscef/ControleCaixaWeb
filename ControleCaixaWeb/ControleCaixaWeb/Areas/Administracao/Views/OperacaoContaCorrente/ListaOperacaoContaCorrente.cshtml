@model IEnumerable<ControleCaixaWeb.Models.OperacaoFinanceiraContaCorrente>

@{
    ViewBag.Title = "ListaOperacaoContaCorrente";
    Layout = "~/Areas/Administracao/Views/Shared/_Layout.cshtml";
}

<h2>Lista de operações na conta corrente:</h2>

<p>
    @Html.ActionLink("Fazer Depósito", "DepositoOperacaoCaixa")
</p>
<table class="table table-bordered">
    <tr>
       
        <th>
            Data:
        </th>
         <th>
            Forma Depósito:
        </th>
         <th>
            Conta Corrente:
        </th>
        <th>
            Valor:
        </th>
        <th>
            Descricao:
        </th>
          <th>
            Operações:
        </th>
       
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.Data)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.FormaPagamento.NomeTipoFormaPagamento)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.ContaLancamento.Numero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Alterar", "AlterarDeposito", new {  id=item.Codigo }) |
            @Html.ActionLink("Detalhes", "Detalhes", new {  id=item.Codigo }) |
            @Html.ActionLink("Excluir", "ExcluirDeposito", new { id = item.Codigo })
        </td>
    </tr>
}

</table>
