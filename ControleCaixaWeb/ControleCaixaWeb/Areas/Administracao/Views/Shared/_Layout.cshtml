<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="icon" type="image/ico" href="../../Content/images/catalog.ico" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap-responsive.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    @Html.Telerik().StyleSheetRegistrar().DefaultGroup(group => group.Add("telerik.common.css").Add("telerik.Forest.css").Add("telerik.rtl.css"))
</head>
<body class="configuracaoCorpo">
    <div class="container-fluid">
        <div id="logindisplay">
            @Html.Partial("_LogOnPartial")
        </div>
        @Html.Telerik().Menu().Name("Menu").Items(raiz =>
    {
        raiz.Add().Text("Página Incial").Action("Index", "Home");
        raiz.Add().Text("Movimentação").Items(submenu =>
        {

            submenu.Add().Text("Fazer Pagamentos").Action("FazerPagamento", "Pagamentos", new { area = "Administracao" });
            submenu.Add().Text("Entrada").Action("CadastrarOperacaoCaixa", "OperacaoCaixa", new { area = "Administracao" });
            submenu.Add().Text("Depósito").Action("DepositoOperacaoCaixa", "OperacaoContaCorrente", new { area = "Administracao" });
            submenu.Add().Text("Fazer Despejo").Action("AdicionarDespejoOperacaoCaixa", "DespejoOperacaoCaixa", new { area = "Administracao" });

        });

        raiz.Add().Text("Cadastro").Items(submenu =>
            {
                submenu.Add().Text("Funcionário").Items(menude =>
                    {
                        menude.Add().Text("Cadastrar Funcionário").Action("CadastrarFuncionario", "Funcionario");
                        menude.Add().Text("Listar Funcionário").Action("ListarFuncionario", "Funcionario");


                    });

                submenu.Add().Text("Conta Corrente").Items(menude =>
                {
                    menude.Add().Text("Cadastrar Conta Corrente").Action("CadastrarContaCorrente", "ContaCorrente");
                    menude.Add().Text("Listar Conta Corrente").Action("ListarContaCorrente", "ContaCorrente");


                });

                submenu.Add().Text("Estabelecimento").Items(menude =>
                {
                    menude.Add().Text("Cadastrar Estabelecimento").Action("CadastrarEstabelecimento", "Estabelecimento");
                    menude.Add().Text("Listar Estabelecimento").Action("ListarEstabelecimento", "Estabelecimento");


                });


                submenu.Add().Text("FormaPagamento").Items(menude =>
                {
                    menude.Add().Text("Cadastrar FormaPagamento").Action("CadastrarFormaPagamento", "FormaPagamento");
                    menude.Add().Text("Listar FormaPagamento").Action("ListarFormaPagamento", "FormaPagamento");


                });
                submenu.Add().Text("Favorecido").Items(menude =>
                {
                    menude.Add().Text("Cadastrar Favorecido").Action("CadastrarFavorecido", "Favorecido", new { area = "Administracao" });
                    menude.Add().Text("Listar Favorecido").Action("ListaFavorecidos", "Favorecido", new { area = "Administracao" });


                });




            });

        raiz.Add().Text("Relatórios").Items(submenu =>
        {
            submenu.Add().Text("Ver Lançamentos").Action("VisualizarOperacoes", "OperacaoCaixa", new { area = "Administracao" });
            submenu.Add().Text("Ver Pagamentos").Action("VisualizarPagamentos", "Pagamentos", new { area = "Administracao" });
            submenu.Add().Text("Ver Despejo").Action("VisualizarDespejo", "DespejoOperacaoCaixa", new { area = "Administracao" });
            submenu.Add().Text("Ver Lancamentos Cartões").Action("VisualizarCartoes", "OperacaoContaCorrente", new { area = "Administracao" });
            submenu.Add().Text("Ver Depósito").Action("VisualizarDeposito", "OperacaoContaCorrente", new { area = "Administracao" });

        });
        raiz.Add().Text("Configuração").Items(submenu =>
        {
            submenu.Add().Text("Trocar Senha").Action("TrocarSenha", "Configuracao");

        });

        raiz.Add().Text("Sair").Action("Sair", "Home");


    })
        @RenderBody()
        @Html.Telerik().ScriptRegistrar().jQuery(false)
    </div>
</body>
</html>
