@model FormaPagamentoEstabelecimento

@{
    ViewBag.Title = "ExcluirFormaPagamento";
    Layout = "~/Areas/Administracao/Views/Shared/_Layout.cshtml";
}

<h2>Excluir Forma Pagamento</h2>

<h3>@User.Identity.Name, Você tem certeza que deseja excluir esse registro?</h3>
@using (Html.BeginForm()) {
<fieldset>
    <legend>Exclusão Forma Pagamento</legend>

    
    <div class="display-field">
        @Html.HiddenFor(model => model.Codigo)
    </div>
    <div class="display-label">Nome:</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.NomeTipoFormaPagamento)
    </div>

    <div class="display-label">Taxa:</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.TaxaFormaPagamento)
    </div>
</fieldset>

    <p>
          <input class = " btn btn-danger" type="submit" value="Excluir "  /> |
        @Html.ActionLink("Página Inicial", "Index","Home")
    </p>
}
