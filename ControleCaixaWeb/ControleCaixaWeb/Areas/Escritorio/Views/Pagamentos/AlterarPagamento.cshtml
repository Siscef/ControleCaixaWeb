@model ControleCaixaWeb.Models.Pagamento

@{
    ViewBag.Title = "AlterarPagamento";
    Layout = "~/Areas/Escritorio/Views/Shared/_Layout.cshtml";
}

<h2>Alterar Pagamento</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Pagamento</legend>

        <div class="editor-label">
            @Html.HiddenFor(model => model.Codigo)
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.Codigo)
            @Html.ValidationMessageFor(model => model.Codigo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DataPagamento,"Data Pagamento:")
        </div>
        <div class="editor-field">
            @Html.Telerik().DatePickerFor(model => model.DataPagamento)
            @Html.ValidationMessageFor(model => model.DataPagamento)
        </div>
         <div class="editor-label">
            @Html.LabelFor(model => model.FavorecidoPagamento,"Nome Favorecido")
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.FavorecidoPagamento.Codigo,(IEnumerable<SelectListItem>)ViewBag.Favorecido,"Selecione Recebedor")<p>Selecione Quem Está Recebendo </p>
            @Html.ValidationMessageFor(model => model.FavorecidoPagamento)
        </div>
          <div class="editor-label">
            @Html.LabelFor(model => model.FormaPagamento,"Forma Pagamento:")
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.FormaPagamento.Codigo,(IEnumerable<SelectListItem>)ViewBag.Forma,"Selecione Forma Pagamento")<p>Selecione A Forma de Pagamento</p>
            @Html.ValidationMessageFor(model => model.FormaPagamento)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Valor,"Valor:")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Valor, new { @class = "input-xlarge" })<p>Digite O Valor Do Pagamento</p>
            @Html.ValidationMessageFor(model => model.Valor)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Observacao,"Observação:")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Observacao, new { @class = "input-xlarge" })<p>Digite Uma Breve Observação/p>
            @Html.ValidationMessageFor(model => model.Observacao)
        </div>
       
         <p>
              <input class="btn btn-warning" type="submit" value="Salvar Alterações" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Página Inicial", "Index","Home")
</div>
