<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <link rel="icon" type="image/ico" href="../../Content/images/catalog.ico" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap-responsive.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/BuscaFormaPagamentoAjax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    @Html.Telerik().StyleSheetRegistrar().DefaultGroup(group => group.Add("telerik.common.css").Add("telerik.Vista.css").Add("telerik.rtl.css"))
</head>
<body>
    <body class="configuracaoCorpo">
        <div class="container-fluid">
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
        @Html.Telerik().Menu().Name("Menu").Items(raiz =>
    {
        raiz.Add().Text("Página Inicial").Action("Index", "Home", new { area = "Escritorio" });
        raiz.Add().Text("Movimentação").Items(submenu =>
        {

            submenu.Add().Text("Lançar Entrada").Action("CadastrarOperacaoCaixa", "OperacaoCaixa", new { area = "Escritorio" });
            submenu.Add().Text("Fazer Recolhimento").Action("SaidaOperacaoCaixa", "OperacaoCaixa", new { area = "Escritorio" });
            submenu.Add().Text("Realizar Pagamento").Action("FazerPagamento", "Pagamentos", new { area = "Escritorio" });
            submenu.Add().Text("Fazer Despejo Manual").Action("AdicionarDespejoOperacaoCaixa", "DespejoOperacaoCaixa", new { area = "Escritorio" });
            submenu.Add().Text("Lançar Fechamento").Action("LancarFechamentoCaixa", "FecharCaixa", new { area = "Escritorio" });
            submenu.Add().Text("Fazer Depósito").Action("FazerDeposito", "OperacaoContaCorrente", new { area = "Escritorio" });



        });

        raiz.Add().Text("Cadastro").Items(submenu =>
            {
                submenu.Add().Text("Funcionário").Items(menude =>
                    {
                        menude.Add().Text("Cadastrar Funcionário").Action("CadastrarFuncionario", "Funcionario", new { area = "Escritorio" });
                        menude.Add().Text("Listar Funcionário").Action("ListarFuncionario", "Funcionario", new { area = "Escritorio" });


                    });

                submenu.Add().Text("Conta Corrente").Items(menude =>
                {
                    menude.Add().Text("Cadastrar Conta Corrente").Action("CadastrarContaCorrente", "ContaCorrente", new { area = "Escritorio" });
                    menude.Add().Text("Listar Conta Corrente").Action("ListarContaCorrente", "ContaCorrente", new { area = "Escritorio" });


                });

                submenu.Add().Text("Estabelecimento").Items(menude =>
                {
                    menude.Add().Text("Cadastrar Estabelecimento").Action("CadastrarEstabelecimento", "Estabelecimento", new { area = "Escritorio" });
                    menude.Add().Text("Listar Estabelecimento").Action("ListarEstabelecimento", "Estabelecimento", new { area = "Escritorio" });


                });


                submenu.Add().Text("FormaPagamento").Items(menude =>
                {
                    menude.Add().Text("Cadastrar FormaPagamento").Action("CadastrarFormaPagamento", "FormaPagamento", new { area = "Escritorio" });
                    menude.Add().Text("Listar FormaPagamento").Action("ListarFormaPagamento", "FormaPagamento", new { area = "Escritorio" });


                });

                submenu.Add().Text("Favorecido").Items(menude =>
                {
                    menude.Add().Text("Cadastrar Favorecido").Action("CadastrarFavorecido", "Favorecido", new { area = "Escritorio" });
                    menude.Add().Text("Listar Favorecido").Action("ListaFavorecidos", "Favorecido", new { area = "Escritorio" });


                });



            });

        raiz.Add().Text("Relatórios").Items(submenu =>
        {
            submenu.Add().Text("Visualizar Formas Pagto").Action("CartoesPorData", "OperacaoCaixa", new { area = "Escritorio" });
            submenu.Add().Text("Visualizar Lançamentos").Action("LancamentosData", "OperacaoCaixa", new { area = "Escritorio" });
            submenu.Add().Text("Visualizar Saídas/Recolhimentos").Action("SaidasData", "OperacaoCaixa", new { area = "Escritorio" });
            submenu.Add().Text("Visualizar Fechamentos").Action("FechamentoCaixaData", "FecharCaixa", new { area = "Escritorio" });
            submenu.Add().Text("Visualizar Pagamentos").Action("PagamentosData", "Pagamentos", new { area = "Escritorio" });
            submenu.Add().Text("Visualizar Todos Lançamentos").Action("ListaDasOperacaoes", "OperacaoCaixa", new { area = "Escritorio" });
            submenu.Add().Text("Visualizar Despejo").Action("DespejosData", "DespejoOperacaoCaixa", new { area = "Escritorio" });
            submenu.Add().Text("Visualizar Depósito").Action("DepositosData", "OperacaoContaCorrente", new { area = "Escritorio" });
            submenu.Add().Text("Visualizar Falta de Caixa").Action("FaltasCaixa", "FecharCaixa", new { area = "Escritorio" });




        });
        raiz.Add().Text("Configuração").Items(submenu =>
        {
            submenu.Add().Text("Configuração").Action("Create", "Configuracao", new { area = "Escritorio" });
            submenu.Add().Text("Trocar Senha").Action("TrocarSenha", "Configuracao", new { area = "Escritorio" });

        });

        raiz.Add().Text("Sair").Action("Sair", "Home", new { area = "Escritorio" });


    })
        @RenderBody()
        @Html.Telerik().ScriptRegistrar().jQuery(false)
    </body>
</html>
