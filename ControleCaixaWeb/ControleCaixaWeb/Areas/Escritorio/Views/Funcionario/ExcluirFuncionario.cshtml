@model ControleCaixaWeb.Models.CadastrarUsuario

@{
    ViewBag.Title = "ExcluirFuncionario";
    Layout = "~/Areas/Escritorio/Views/Shared/_Layout.cshtml";
}

<h2>Excluir Funcionario</h2>

<h3>@User.Identity.Name, Você tem certeza que deseja excluir esse registro?</h3>
@using (Html.BeginForm()) {
<fieldset>
    <legend>Excluir Funcionário</legend>

    
    <div class="display-field">
        @Html.HiddenFor(model => model.Codigo)
    </div>

    <div class="display-label">Nome:</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Nome)
    </div>

    <div class="display-label">Email:</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Email)
    </div>

   </fieldset>

    <p>
        <input class = " btn btn-danger" type="submit" value="Excluir "  /> |
        @Html.ActionLink("Página Inicial", "Index","Home")
    </p>
}
