@model ControleCaixaWeb.Models.Configuracao
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Escritorio/Views/Shared/_Layout.cshtml";
}

<h2>Alterar Configuração</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Configuração</legend>

        @Html.HiddenFor(model => model.Codigo)
        @Html.HiddenFor(model => model.EstabelecimentoPadrao.Codigo)

        <div class="editor-label">
            @Html.LabelFor(model => model.CasasDecimais)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.CasasDecimais)
            @Html.ValidationMessageFor(model => model.CasasDecimais)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FazerLancamentoContaCorrente)
        </div>
        <div class="editor-field">
            @Html.CheckBoxFor(model => model.FazerLancamentoContaCorrente)
            @Html.ValidationMessageFor(model => model.FazerLancamentoContaCorrente)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Email)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Assunto)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Assunto)
            @Html.ValidationMessageFor(model => model.Assunto)
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.EstabelecimentoPadrao)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.EstabelecimentoPadrao.Codigo, (IEnumerable<SelectListItem>)@ViewBag.Loja, "Selecione Loja")
            @Html.ValidationMessageFor(model => model.EstabelecimentoPadrao)
        </div>


        <p>
            <input class="btn btn-success" type="submit" value="Salvar" />
            <input class="btn btn-warning" type="reset" value="Limpar" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Página Inicial", "Index", "Home")
</div>
