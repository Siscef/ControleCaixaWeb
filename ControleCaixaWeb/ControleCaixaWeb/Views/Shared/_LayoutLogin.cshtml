<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
	<title>@ViewBag.Title</title>
	<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/login-box.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/bootstrap-responsive.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
	<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
	@Html.Telerik( ).StyleSheetRegistrar( ).DefaultGroup(group => group.Add("telerik.common.min.css").Add("telerik.Web20.css").Add("telerik.rtl.css"))
</head>
<body class="body-page">
	<body class="configuracaoCorpo">
		<div class="container-fluid">
			<div id="logindisplay">
		@Html.Partial("_LogOnPartial")
				
	</div>
	@Html.Telerik( ).Menu( ).Name("Menu_Principal").Items(raiz =>
{
	raiz.Add( ).Text("Página Inicial").Action("Index", "Home");
	raiz.Add( ).Text("Fazer Login").Action("Entrar", "ContaUsuario");
	raiz.Add( ).Text("Sair").Action("Sair", "ContaUsuario");

	if (Roles.IsUserInRole("Administrador"))
	{
		raiz.Add( ).Text("Área Administração").Action("Index", "Home", new { area = "Administracao" });
	}

	if (Roles.IsUserInRole("Escritorio"))
	{
		raiz.Add( ).Text("Area Gerencial").Action("Index", "Home", new { area = "Escritorio" });
	}

	if (Roles.IsUserInRole("OperadorCaixa"))
	{
		raiz.Add( ).Text("OperadorCaixa").Action("Index", "Home", new { area = "OperadorCaixa" });
	}
    
})
	
	@RenderBody( )
				
	@Html.Telerik( ).ScriptRegistrar( ).jQuery(false)


</body>
</html>
